---
interface EducationSubSection {
  institution: string;
  degree: string;
  major?: string;
  minor?: string;
  location?: string;
  dates?: string;
  gpa?: string;
  honors?: string;
  coursework?: string[];
  items?: string[];
}

const { items } = Astro.props;
---

<>
  {
    items.map((edu: EducationSubSection) => (
      <div class="sub-section education">
        <div class="sub-section-header">
          <span class="institution">{edu.institution}</span>
          {edu.location && <span class="location">{edu.location}</span>}
        </div>
        
        <div class="sub-section-header">
          <span class="degree">
            {edu.degree}
            {edu.major && ` in ${edu.major}`}
            {edu.minor && ` (Minor: ${edu.minor})`}
          </span>
          <span class="dates">{edu.dates}</span>
        </div>
        
        {(edu.gpa || edu.honors) && (
          <div class="education-details">
            {edu.gpa && <span class="gpa">GPA: {edu.gpa}</span>}
            {edu.honors && <span class="honors">{edu.honors}</span>}
          </div>
        )}
        
        {edu.coursework && edu.coursework.length > 0 && (
          <div class="coursework">
            <span class="coursework-label">Relevant Coursework:</span>
            <span class="coursework-items">{edu.coursework.join(", ")}</span>
          </div>
        )}
        
        {edu.items && edu.items.length > 0 && (
          <ul class="sub-section-items">
            {edu.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        )}
      </div>
    ))
  }
</>

<style>
  .sub-section.education {
    margin-bottom: var(--subSectionMarginBottom);
  }

  .sub-section.education:last-child {
    margin-bottom: var(--subSectionMarginBottomLast);
  }

  .sub-section-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .institution {
    font-weight: var(--fontWeightBold);
    color: var(--colorText);
    flex: 1;
  }

  .location {
    color: var(--colorHighlight);
    font-style: italic;
  }

  .degree {
    font-size: var(--positionFontSize);
  }

  .dates {
    font-size: var(--datesFontSize);
    font-style: italic;
  }

  .education-details {
    display: flex;
    gap: 15pt;
    margin-top: 0.05cm;
    font-size: 8pt;
  }

  .gpa {
    color: var(--colorLightText);
  }

  .honors {
    color: var(--colorHighlight);
    font-style: italic;
  }

  .coursework {
    margin-top: 0.1cm;
    font-size: 8pt;
    color: var(--colorLightText);
  }

  .coursework-label {
    font-weight: var(--fontWeightBold);
  }

  .coursework-items {
    margin-left: 0.2cm;
  }

  .sub-section-items {
    width: 100%;
    margin: var(--subSectionItemsUlMargin) 0;
    padding-left: 13px;
    box-sizing: border-box;
    font-size: 9pt;
    font-weight: var(--fontWeightLight);
  }
</style>
